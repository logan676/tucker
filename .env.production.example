# ===========================================
# Tucker Production Environment Variables
# ===========================================
# Copy this file to .env.production and fill in values

# Application
NODE_ENV=production
PORT=3000

# Database (AWS RDS PostgreSQL)
DB_HOST=your-rds-endpoint.ap-southeast-2.rds.amazonaws.com
DB_PORT=5432
DB_USERNAME=tucker_admin
DB_PASSWORD=your-strong-password-here
DB_NAME=tucker_prod

# Redis (AWS ElastiCache)
REDIS_HOST=your-elasticache-endpoint.ap-southeast-2.cache.amazonaws.com
REDIS_PORT=6379

# JWT Secrets (generate with: openssl rand -base64 64)
JWT_SECRET=your-jwt-secret-at-least-64-characters-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# CORS Origins (comma separated)
CORS_ORIGINS=https://admin.tucker.com.au,https://tucker.com.au

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx

# SMS Provider (Twilio example)
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+61xxxxxxxxx

# Admin User
ADMIN_PHONE=your-admin-phone

# AWS S3 (optional, if not using Cloudinary)
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx
# AWS_REGION=ap-southeast-2
# AWS_S3_BUCKET=tucker-uploads

# Logging
LOG_LEVEL=info

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
